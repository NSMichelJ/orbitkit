---
import Footer from "@/components/sections/Footer.astro";
import Hero from "@/components/sections/Hero.astro";
import OriginQuote from "@/components/sections/OriginQuote.astro";
import Roadmap from "@/components/sections/Roadmap.astro";
import Support from "@/components/sections/Support.astro";
import WhyOrbitUI from "@/components/sections/WhyOrbitUI.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="OrbitUI Accessible, Customizable, & Lightweight component library"
>
  <Hero />

  <WhyOrbitUI />

  <Roadmap />

  <Support />

  <OriginQuote />

  <Footer />
</Layout>

<style>
  .mesh {
    top: 0;
    left: 0;
    z-index: -1;
    display: block;
    position: fixed;
    height: 100dvh;
    width: 100%;
    background-color: hsla(200, 62%, 6%, 1);
    background-image:
      radial-gradient(
        at 73% 74%,
        hsla(172, 75%, 27%, 0.3) 0px,
        transparent 50%
      ),
      radial-gradient(
        at 25% 32%,
        hsla(202, 75%, 27%, 0.45) 0px,
        transparent 50%
      );
  }
</style>
